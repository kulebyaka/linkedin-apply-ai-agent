# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# LinkedIn Credentials
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password
LINKEDIN_API_KEY=  # Optional, if you have API access

# LLM Configuration
PRIMARY_LLM_PROVIDER=openai  # openai, deepseek, grok, anthropic
FALLBACK_LLM_PROVIDER=deepseek

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# Grok (X.AI)
GROK_API_KEY=
GROK_MODEL=grok-beta

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Paths
DATA_DIR=./data
CV_DIR=./data/cv
JOBS_DIR=./data/jobs
GENERATED_CVS_DIR=./data/generated_cvs
MASTER_CV_PATH=./data/cv/master_cv.json

# Workflow Settings
JOB_FETCH_INTERVAL_HOURS=1
MAX_CONCURRENT_APPLICATIONS=3
BROWSER_HEADLESS=true

# Notifications
WEBHOOK_URL=  # Discord, Slack, or custom webhook URL
NOTIFICATION_EMAIL=

# API Server (for HITL UI)
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
